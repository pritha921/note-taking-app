<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Notes</title>
    <link rel="stylesheet" href="/style.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body>
    <h1>Your Notes</h1>

    <!-- Check if notes array is empty -->
    <% if (notes.length === 0) { %>
        <p>No notes yet. To show your notes, please add first.</p>
    <% } else { %>
        <!-- Render existing notes -->
        <ul>
            <% notes.forEach(note => { %>
                <li>
                    <strong><%= note.title %></strong>: <%= note.content %>
                    <!-- Edit form -->
                    <form action="/notes/<%= note._id %>/edit" method="GET" style="display: inline;">
                        <button type="submit">Edit</button>
                    </form>
                    <!-- Delete form -->
                    <form action="/notes/<%= note._id %>/delete" method="POST" style="display: inline;">
                        <button type="submit">Delete</button>
                    </form>
                </li>
            <% }); %>
        </ul>
    <% } %>
    
    <!-- Add task button -->
    <form action="/dashboard/notes/addNote" method="GET">
        <button type="submit">Add notes</button>
    </form>
    
    <!-- Logout button -->
    <form action="/logout" method="POST">
        <button type="submit">Logout</button>
    </form>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>

